                  </a>
                </li>
            % elif lang == 'en':
                <li class="nav-item">
                  % try:
                      % if hasattr(context, 'get') and context.get('post') and post:
                          <a class="nav-link" href="${post.permalink(lang='pt_br')}">
                      % elif hasattr(context, 'get') and context.get('page') and page:
                          <a class="nav-link" href="${page.permalink(lang='pt_br')}">
                      % else:
                          <a class="nav-link" href="${_link('root', None, 'pt_br')}">
                      % endif
                  % except:
                      <a class="nav-link" href="${_link('root', None, 'pt_br')}">
                  % endtry
