## -*- coding: utf-8 -*-
<%namespace name="base" file="base_helper.tmpl" import="*"/>

<%def name="html_header()">
    <header id="header" role="banner">
        ${html_navigation_links()}
        ##${html_site_title()}


        %if search_form:
            <div class="searchform" role="search">
                ${search_form}
            </div>
        %endif
    </header>

    ${template_hooks['page_header']()}
</%def>

<%def name="html_site_title()">
    <h3 id="brand" class="masthead-title">
        <a href="${abs_link(_link("root", None, lang))}" title="${blog_title}" rel="home">
            ${blog_title}
        </a>
    </h3>
</%def>

<%def name="html_navigation_links()">
<!-- Bootstrap 5 sticky navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
  <div class="container-fluid">
    <!-- Brand -->
    <a class="navbar-brand" href="${_link('root', None, lang)}">${blog_title}</a>

    <!-- Toggle button for mobile -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
      aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Collapsible content -->
    <div class="collapse navbar-collapse" id="navbarNav">
      <!-- Left menu -->
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        % for url, text in navigation_links[lang]:
          <li class="nav-item">
            <a class="nav-link" href="${url}">${text}</a>
          </li>
        % endfor
      </ul>

      <!-- Right menu (Language Switch) -->
      <ul class="navbar-nav">
        % if len(translations) > 1:
            % if lang == 'pt_br':
                <li class="nav-item">
                  % try:
                      % if hasattr(context, 'get') and context.get('post') and post:
                          <a class="nav-link" href="${post.permalink(lang='en')}">
                      % elif hasattr(context, 'get') and context.get('page') and page:
                          <a class="nav-link" href="${page.permalink(lang='en')}">
                      % else:
                          <a class="nav-link" href="${_link('root', None, 'en')}">
                      % endif
                  % except:
                      <a class="nav-link" href="${_link('root', None, 'en')}">
                  % endtry
